{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compile",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolder}\\Integer.cpp",
                "${workspaceFolder}\\Rational.cpp",
                "-o",
                "${workspaceFolder}\\RationalThinking.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
